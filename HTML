<!DOCTYPE html>
<html>
<head>
    <title>Titanic Survival Prediction</title>
</head>
<body>
    <h1>Titanic Survival Prediction</h1>
    
    <form id="predictForm">
        <label>Pclass: <input type="number" name="Pclass" value="3" required></label><br><br>
        <label>Sex: 
            <select name="Sex">
                <option value="male">Male</option>
                <option value="female">Female</option>
            </select>
        </label><br><br>
        <label>Age: <input type="number" name="Age" value="22" required></label><br><br>
        <label>SibSp: <input type="number" name="SibSp" value="0" required></label><br><br>
        <label>Parch: <input type="number" name="Parch" value="0" required></label><br><br>
        <label>Fare: <input type="number" step="0.01" name="Fare" value="7.25" required></label><br><br>
        <label>Embarked:
            <select name="Embarked">
                <option value="S">S</option>
                <option value="C">C</option>
                <option value="Q">Q</option>
            </select>
        </label><br><br>
        <button type="submit">Predict</button>
    </form>

    <h2>Prediction Result:</h2>
    <div id="result"></div>

    <script>
        const form = document.getElementById('predictForm');
        form.addEventListener('submit', async (e) => {
            e.preventDefault();

            // Collect form data
            const formData = new FormData(form);
            const data = {};
            formData.forEach((value, key) => { data[key] = isNaN(value) ? value : Number(value) });

            try {
                // Call FastAPI predict endpoint
                const response = await fetch('http://127.0.0.1:8000/predict', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(data)
                });

                const result = await response.json();
                document.getElementById('result').innerHTML = `
                    <strong>Prediction:</strong> ${result.prediction === 1 ? 'Survived' : 'Did not survive'}<br>
                    <strong>Probability:</strong> ${result.probability.toFixed(2)}
                `;
            } catch (error) {
                document.getElementById('result').innerHTML = 'Error: ' + error;
            }
        });
    </script>
</body>
</html>
